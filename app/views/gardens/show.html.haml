%h2= @garden.name

/ %ol.growth-rings
/   = render 'commits'

/ = @garden.sha_keys
/ = @garden.sha_key_dates
/ %br
/ = @garden.last_updated
/ %br
/ = @garden.comment_quality

%h3 Git Commits

= link_to "Get Commits", "javascript:void(0)", class: "commits-log", ajax_path: git_api_commits_user_garden_path(@user, @garden)
%br
= link_to "Plant Tree", user_garden_growth_rings_path(@user, @garden), method: :post

.row
  .col-lg-6.col-lg-offset-3
    %div.chart.attribute-holder{age: @garden.age, length: @garden.get_length, gnarling: @garden.comment_quality, id: @garden.name, initialise: "true", class: @garden.name}

      %svg{viewBox: "0 0 840 600", preserveAspectRatio: "none"}
        %g{ class: "#{@garden.name}"}


%button{class: "regenerate", tree: @garden.name}Regenerate

%script{:src => "/assets/main.js?body=1"}